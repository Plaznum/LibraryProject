<div class="container book">
	<h2 class="text-center">Add/Edit Book</h2>
	<div class="row mt-2 d-flex justify-content-center"></div>
	<form class= "m-auto d-flex flex-column justify-content-center align-content-center">
         <div id="username" class="form-text">Please enter the book details below</div>
	  <div class="mb-3 input-group">
		<span class="input-group-text">ISBN: </span>
		<input type="text" class="form-control" aria-label="isbn" aria-describedby="isbn" placeholder="0123456789" name="isbn">
	  </div>
	  <div class="mb-3 input-group">
		<span class="input-group-text">Title: </span>
		<input type="text" class="form-control" aria-label="title" aria-describedby="title" placeholder="Title" name="title">
	  </div>
	  <div class="mb-3 input-group">
		<span class="input-group-text">Description: </span>
		<input type="text" class="form-control" aria-label="description" aria-describedby="description" name="description">
	  </div>
	  <div class="mb-3 input-group">
		<span class="input-group-text">Availability: </span>
		<span class="input-group-text">In Stock/Rented</span>
	  </div>
	  <div class="mb-3 input-group">
		<span class="input-group-text">Added on: </span>
		<span class="input-group-text">02/25/2021</span>
	  </div>
	  <div class= "d-flex justify-content-around align-content-center">
  		  <button type="submit" class="btn btn-primary col-4" name="action" value="login">Submit</button>	 
	  </div>
	</form>
</div>